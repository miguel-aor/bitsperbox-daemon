{
  "name": "bitsperbox-daemon",
  "version": "1.0.0",
  "description": "BitsperBox - Hardware bridge daemon for BitsperFoods restaurants",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bitsperbox": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "setup": "tsx src/cli.ts setup",
    "status": "tsx src/cli.ts status",
    "test:print": "tsx src/cli.ts test-print",
    "test:connection": "tsx src/cli.ts test-connection",
    "logs": "journalctl -u bitsperbox -f",
    "install:service": "sudo cp systemd/bitsperbox.service /etc/systemd/system/ && sudo systemctl daemon-reload && sudo systemctl enable bitsperbox",
    "uninstall:service": "sudo systemctl stop bitsperbox && sudo systemctl disable bitsperbox && sudo rm /etc/systemd/system/bitsperbox.service"
  },
  "keywords": [
    "raspberry-pi",
    "thermal-printer",
    "pos",
    "restaurant",
    "iot",
    "bitsperfoods"
  ],
  "author": "BitsperFoods",
  "license": "UNLICENSED",
  "dependencies": {
    "@abandonware/bleno": "^0.6.2",
    "@supabase/supabase-js": "^2.47.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "ora": "^8.0.1",
    "usb": "^2.13.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
